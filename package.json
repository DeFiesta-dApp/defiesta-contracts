{
  "name": "defiesta-contracts",
  "version": "0.0.1",
  "description": "DeFiesta Contracts is a library for the secure and optimized development of modern smart contracts.",
  "main": "index.js",
  "repository": "https://github.com/DeFiesta-dApp/defiesta-contracts.git",
  "author": "https://github.com/0xdino",
  "keywords": [
    "DeFiesta",
    "smart contracts",
    "ethereum"
  ],
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged && pnpm lint",
    "prepare": "husky install",
    "prepush": "pnpm test",
    "prettier:check": "prettier --check ./**/*.{ts,js,json,*rc}",
    "prettier:write": "prettier --write ./**/*.{ts,js,json,*rc}",
    "eslint:check": "eslint \"{test,scripts}/**/*.ts\"",
    "solhint": "solhint table contracts/**/*.sol",
    "lint": "pnpm prettier:write && pnpm prettier:check && pnpm eslint:check && pnpm solhint",
    "test": "npx hardhat test",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^2.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@nomicfoundation/hardhat-viem": "^1.0.2",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.11",
    "@types/chai-as-promised": "7.1.6",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "chai": "^4.3.10",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.1",
    "ethers": "^6.9.1",
    "hardhat": "^2.19.3",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "prettier-plugin-solidity": "^1.3.0",
    "solhint": "^4.0.0",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.5",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.2",
    "typescript": "~5.0.4",
    "viem": "^1.20.3"
  }
}
